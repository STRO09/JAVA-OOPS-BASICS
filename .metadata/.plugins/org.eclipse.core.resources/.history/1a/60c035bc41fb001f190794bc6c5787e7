		while (iterator.hasNext()) {
			
		}
		
	}

	@Override
	public void insertData(String country, String capital) {
		// TODO Auto-generated method stub
		
		countrycapitals.put(country, capital);
		System.out.println("Data Inserted Successfully");
		
	}

}
